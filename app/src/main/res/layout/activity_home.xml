<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            app:navigationIcon="@drawable/ic_menu_black_24dp"
            app:theme="@style/ToolbarTheme" />

        <com.pedromassango.ibackdrop.Backdrop
            android:id="@+id/backdrop_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:backViewSize="520dp"
            app:closeIcon="@drawable/ic_close_black_24dp"
            app:openIcon="@drawable/ic_menu_black_24dp">

            <include layout="@layout/activity_home_backlayer" />

            <include layout="@layout/activity_home_frontlayer" />

        </com.pedromassango.ibackdrop.Backdrop>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_attach_money_black_24dp"
        android:tint="#ffffff"
        app:layout_anchor="@+id/mRecyclerView"
        app:layout_anchorGravity="right|bottom" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>