<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.presentation.transactionmanager.TransactionManagerActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liftOnScroll="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="128dp">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="72dp"
                android:layout_marginEnd="16dp"
                android:gravity="bottom"
                android:paddingBottom="18dp"
                android:text="Nova transação"
                android:textColor="#000000"
                android:textSize="30sp" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp">

            <com.system.moneycontrol.ui.custom.ItemManager
                android:id="@+id/paymentDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:enabled="false"
                custom:icon="@drawable/ic_event_black_24dp_alpha"
                custom:label="Data de pagamento"
                custom:value="--" />

            <com.system.moneycontrol.ui.custom.ItemManager
                android:id="@+id/tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:enabled="false"
                custom:icon="@drawable/ic_loyalty_black_24dp"
                custom:label="Tag"
                custom:value="--" />

            <com.system.moneycontrol.ui.custom.ItemManager
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:icon="@drawable/ic_attach_money_black_24dp"
                custom:label="Valor gasto"
                custom:onlyDigits="true"
                custom:value="--" />

            <com.system.moneycontrol.ui.custom.ItemManager
                android:id="@+id/refund"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:icon="@drawable/ic_attach_money_black_24dp"
                custom:label="Valor retornado"
                custom:onlyDigits="true"
                custom:value="--" />

            <com.system.moneycontrol.ui.custom.ItemManager
                android:id="@+id/paymentType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:enabled="false"
                custom:icon="@drawable/ic_account_balance_black_24dp"
                custom:label="Forma de pagamento"
                custom:value="--" />

            <com.system.moneycontrol.ui.custom.ItemManager
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:icon="@drawable/ic_content_paste_black_24dp_alpha"
                custom:label="Observações"
                custom:value="--" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/accent"
        app:fabAlignmentMode="end"
        app:liftOnScroll="true" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/mSaveButtom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:src="@drawable/ic_save_white_24dp"
        app:layout_anchor="@id/bar" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>